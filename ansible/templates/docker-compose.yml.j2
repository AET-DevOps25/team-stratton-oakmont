version: '3.8'

services:
  program-catalog-service:
    build:
      context: ./server
      dockerfile: program-catalog-service/Dockerfile
    ports:
      - "8080:8080"
    environment:
      - SPRING_PROFILES_ACTIVE=prod
    restart: unless-stopped
    
  study-plan-service:
    build:
      context: ./server
      dockerfile: study-plan-service/Dockerfile
    ports:
      - "8081:8081"
    environment:
      - SPRING_PROFILES_ACTIVE=prod
    depends_on:
      - program-catalog-service
    restart: unless-stopped
    
  frontend:
    build:
      context: ./client
      dockerfile: Dockerfile
    ports:
      - "80:80"
    depends_on:
      - program-catalog-service
      - study-plan-service
    restart: unless-stopped

networks:
  default:
    driver: bridge